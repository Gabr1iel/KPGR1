<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="cz.algone.controller.UIController" fx:id="root">
    <top>
        <ToolBar>
            <Button text="Barva" />
            <Button text="Tloušťka" />
        </ToolBar>
    </top>

    <left>
        <VBox style="-fx-background-color: #afd1de">
            <Label text="Algoritmy:" />
            <Button text="Polygon" onAction="#setRasterizerOnClick" styleClass="btn">
                <userData>POLYGON</userData>
            </Button>
            <Button text="DDA" onAction="#setRasterizerOnClick">
                <userData>DDA</userData>
            </Button>
            <Button text="Bresenham" onAction="#setRasterizerOnClick">
                <userData>BRESENHAM</userData>
            </Button>
            <Button text="Trivial" onAction="#setRasterizerOnClick">
                <userData>TRIVIAL</userData>
            </Button>
        </VBox>
    </left>

    <center>
        <fx:include source="raster.fxml" fx:id="raster"/>
    </center>
</BorderPane>

