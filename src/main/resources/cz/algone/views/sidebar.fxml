<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="sidebar"
      id="sideBar"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cz.algone.ui.sidebar.SidebarController"
      spacing="12"
      fillWidth="true"
      styleClass="sidebar-root">

    <Label text="Algone"
           styleClass="sidebar-logo"/>

    <Separator styleClass="sidebar-separator"/>

    <VBox spacing="4" fillWidth="true">
        <ToggleButton fx:id="btnAlgorithms"
                      text="Algoritmy"
                      maxWidth="Infinity"
                      onAction="#toggleAlgorithms"
                      styleClass="sidebar-section-toggle"/>

        <VBox fx:id="algorithmBox"
              spacing="6"
              fillWidth="true"
              styleClass="sidebar-section"
              visible="false">
            <Button fx:id="btnPolygon"
                    userData="POLYGON"
                    text="Polygon"
                    onAction="#setRasterizerOnClick"
                    maxWidth="Infinity"
                    styleClass="rasterizer-btn, active"/>

            <Button fx:id="btnDDA"
                    userData="DDA"
                    text="DDA"
                    onAction="#setRasterizerOnClick"
                    maxWidth="Infinity"
                    styleClass="rasterizer-btn"/>

            <Button fx:id="btnBresenham"
                    userData="BRESENHAM"
                    text="Bresenham"
                    onAction="#setRasterizerOnClick"
                    maxWidth="Infinity"
                    styleClass="rasterizer-btn"/>

            <Button fx:id="btnTrivial"
                    userData="TRIVIAL"
                    text="Trivial"
                    onAction="#setRasterizerOnClick"
                    maxWidth="Infinity"
                    styleClass="rasterizer-btn"/>
        </VBox>
    </VBox>
</VBox>